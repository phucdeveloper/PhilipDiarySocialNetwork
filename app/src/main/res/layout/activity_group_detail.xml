<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GroupDetailActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@color/colorAccent"
            android:scaleType="centerCrop"
            android:id="@+id/imageview_background_group"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>

        <TextView
            android:id="@+id/textview_name_group"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="@string/name_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Nhóm riêng tư"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="36 thành viên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.yiiguxing.compositionavatar.CompositionAvatarView
                app:fitType="START"
                android:layout_gravity="start"
                android:id="@+id/composition_avatar_view"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>